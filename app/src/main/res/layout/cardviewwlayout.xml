<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40px"
    android:layout_row="0"
    android:layout_column="0"
    android:elevation="3sp"
    android:layout_gravity="fill"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    app:cardCornerRadius="3sp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UserView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"

            android:src="@drawable/ic_launcher_background"/>

        <TextView

            android:id="@+id/cardviewfirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_marginTop="30px"
            android:text="First name"
            android:layout_below="@+id/UserView"/>

        <TextView
            android:id="@+id/cardviewlastname"
            android:layout_below="@+id/cardviewfirstname"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="second Name"/>

        <TextView
            android:id="@+id/cardviewemail"
            android:layout_below="@+id/cardviewlastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/cardviewphonenumber"
            android:layout_below="@+id/cardviewemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textSize="10sp"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>